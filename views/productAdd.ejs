<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Muestra los "ultimos" productos -->
			<h2 class="col-12"></h2>
			<form class="formPropio" action="/product/add" method="POST">

				<input type="hidden" name="clienteId" value="<%= locals.user.id %>">
			 
				<label class="form-label"for="nombreProd">Nombre del producto</label><br>
				<input class="form-input" type="text" id="nombreProd" name="nombreProd" value="<%= locals.old !== undefined && old.nombreProd ? old.nombreProd : "" %>"><br>
				<% if (locals.errors && errors.nombreProd) { %>
					<p class="feedback"><%= errors.nombreProd.msg %></p>
				<% } %>
				
				<label class="form-label" for="imagenProd">Imagen</label><br>
				<input class="form-input file-select" type="text" id="imagen" name="imagenProd" value="<%= locals.old !== undefined && old.imagenProd ? old.imagenProd : "" %>"><br>
				<% if (locals.errors && errors.imagenProd) { %>
					<p class="feedback"><%= errors.imagenProd.msg %></p>
				<% } %>

				<label class="form-label" for="descripcion">Descripci√≥n</label><br>
				<textarea class="form-input" id="descripcion" name="descripcion" rows="4"><%= locals.old !== undefined && old.descripcion ? old.descripcion : "" %></textarea><br>
				<% if (locals.errors && errors.descripcion) { %>
					<p class="feedback"><%= errors.descripcion.msg %></p>
				<% } %>
			 
				<button type="submit" class="buy-now-button botonRegister">Agregar Producto</button>
			</form>
		</div>
	</div>
			

	<!-- footer -->
	<%- include("./partials/footer") %>

	<!-- /footer -->
</body>

</html>